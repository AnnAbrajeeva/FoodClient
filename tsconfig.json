{
    "compilerOptions": {
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "module": "es6",
      "target": "es6",
      "moduleResolution": "node",
        "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
      },
      "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
      },
      "include": ["src/**/*"], 
      "exclude": ["node_modules"] 
}