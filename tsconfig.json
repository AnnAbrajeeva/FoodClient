{
  "compilerOptions": {
	"noEmit": true,
	"allowJs": true,
	"sourceMap": true,
  "baseUrl": "src",
	"paths": {
  	"components/*": ["components/*"],
  	"config/*": ["config/*"],
  	"styles/*": ["styles/*"],
  	"utils/*": ["utils/*"],
  	"models/*": ["models/*"],
  	"store/*": ["store/*"],
  	"assets/*": ["assets/*"],
  	"hooks/*": ["hooks/*"],
	},
	"strict": true,
	"strictNullChecks": true,
	"skipLibCheck": true,
	"module": "es6",
	"target": "es6",
	"moduleResolution": "node",
  "jsx": "react-jsx",
	"esModuleInterop": true,
	"allowSyntheticDefaultImports": true,
  },
 
  "include": ["src/**/*", "declaration.d.ts"], // какие файлы включены в проверку
  "exclude": ["node_modules"] // какие файлы исключены
}